<?xml version="1.0" encoding="UTF-8"?>
<project default="xar" name="fdsn-station">
    <xmlproperty file="expath-pkg.xml"/>
    <property name="project.version" value="${package(version)}"/>
    <property name="project.app" value="fdsn-station"/>
    <property name="build.dir" value="build"/>
    <target name="xar">
        <mkdir dir="${build.dir}"/>
	<zip basedir="." destfile="${build.dir}/${project.app}-${project.version}.xar" excludes="${build.dir}/*,TEST/,archive/,AllStation/,Station_for_test/,Trash/,.pytest_cache/,bin/,doc/,Station-all/,Station-test/,etc/"/>
    </target>
</project>
